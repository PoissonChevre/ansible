#!/bin/bash

############################################################################
# Common Login Script for Mounting SMB Share
# 
# This script is executed for all users during login and checks for
# the existence of the mount_smb_share.sh script in the public
# directory before running it.
# 
# Author: Renaud Charlier
# Date: 08-02-2024
# Version: 1.0
# 
# Notes:
#   - Ensure that mount_smb_share.sh is available in /home/u.ansible@barzini.lan/
#############################################################################

# check it the scrip exists
if [[ -f /home/u.ansible@barzini.lan/mount_smb_share.sh ]]; then
# if true, execute the additional script 
    bash /home/u.ansible@barzini.lan/mount_smb_share.sh 
else
    echo "ERROR: /home/u.ansible@barzini.lan/mount_smb_share.sh does not exist"
    exit 1
fi

